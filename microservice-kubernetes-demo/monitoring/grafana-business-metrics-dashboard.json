{
  "dashboard": {
    "title": "Business Metrics Dashboard",
    "tags": ["business", "orders", "customers", "catalog"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Total Orders Created",
        "type": "stat",
        "gridPos": {"x": 0, "y": 0, "w": 8, "h": 6},
        "targets": [
          {
            "expr": "sum(http_server_requests_seconds_count{uri=\"/\",method=\"POST\",job=\"order\",status=\"200\"})",
            "legendFormat": "Orders"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "color": {"mode": "palette-classic"}
          }
        }
      },
      {
        "id": 2,
        "title": "Orders Created Rate (per min)",
        "type": "graph",
        "gridPos": {"x": 8, "y": 0, "w": 16, "h": 6},
        "targets": [
          {
            "expr": "rate(http_server_requests_seconds_count{uri=\"/\",method=\"POST\",job=\"order\",status=\"200\"}[1m]) * 60",
            "legendFormat": "Orders/min"
          }
        ]
      },
      {
        "id": 3,
        "title": "Order Creation Success Rate",
        "type": "gauge",
        "gridPos": {"x": 0, "y": 6, "w": 8, "h": 6},
        "targets": [
          {
            "expr": "sum(rate(http_server_requests_seconds_count{uri=\"/\",method=\"POST\",job=\"order\",status=\"200\"}[5m])) / sum(rate(http_server_requests_seconds_count{uri=\"/\",method=\"POST\",job=\"order\"}[5m])) * 100",
            "legendFormat": "Success %"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 100,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 90, "color": "yellow"},
                {"value": 95, "color": "green"}
              ]
            }
          }
        }
      },
      {
        "id": 4,
        "title": "Order Deletion Rate",
        "type": "graph",
        "gridPos": {"x": 8, "y": 6, "w": 8, "h": 6},
        "targets": [
          {
            "expr": "rate(http_server_requests_seconds_count{method=\"DELETE\",job=\"order\"}[1m]) * 60",
            "legendFormat": "Deletions/min"
          }
        ]
      },
      {
        "id": 5,
        "title": "Customer Requests",
        "type": "graph",
        "gridPos": {"x": 16, "y": 6, "w": 8, "h": 6},
        "targets": [
          {
            "expr": "rate(http_server_requests_seconds_count{job=\"customer\"}[1m])",
            "legendFormat": "{{method}} {{uri}}"
          }
        ]
      },
      {
        "id": 6,
        "title": "Catalog Item Views",
        "type": "graph",
        "gridPos": {"x": 0, "y": 12, "w": 12, "h": 6},
        "targets": [
          {
            "expr": "rate(http_server_requests_seconds_count{job=\"catalog\",method=\"GET\"}[1m])",
            "legendFormat": "{{uri}}"
          }
        ]
      },
      {
        "id": 7,
        "title": "Order Form Access Rate",
        "type": "stat",
        "gridPos": {"x": 12, "y": 12, "w": 6, "h": 6},
        "targets": [
          {
            "expr": "rate(http_server_requests_seconds_count{uri=\"/form.html\",job=\"order\",method=\"GET\"}[1m]) * 60",
            "legendFormat": "Form Views/min"
          }
        ]
      },
      {
        "id": 8,
        "title": "Order List Views",
        "type": "stat",
        "gridPos": {"x": 18, "y": 12, "w": 6, "h": 6},
        "targets": [
          {
            "expr": "rate(http_server_requests_seconds_count{uri=\"/\",job=\"order\",method=\"GET\"}[1m]) * 60",
            "legendFormat": "List Views/min"
          }
        ]
      },
      {
        "id": 9,
        "title": "Top Requested URIs by Service",
        "type": "table",
        "gridPos": {"x": 0, "y": 18, "w": 24, "h": 8},
        "targets": [
          {
            "expr": "topk(10, sum by (job, uri, method) (rate(http_server_requests_seconds_count[5m])))",
            "format": "table",
            "instant": true
          }
        ]
      },
      {
        "id": 10,
        "title": "Error Rate by Service",
        "type": "graph",
        "gridPos": {"x": 0, "y": 26, "w": 12, "h": 6},
        "targets": [
          {
            "expr": "rate(http_server_requests_seconds_count{status=~\"4..|5..\"}[1m])",
            "legendFormat": "{{job}} - {{status}}"
          }
        ]
      },
      {
        "id": 11,
        "title": "Database Query Performance",
        "type": "graph",
        "gridPos": {"x": 12, "y": 26, "w": 12, "h": 6},
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(hikaricp_connections_acquire_seconds_bucket[5m]))",
            "legendFormat": "{{job}} - Connection Acquire p95"
          }
        ]
      }
    ],
    "refresh": "5s",
    "time": {
      "from": "now-30m",
      "to": "now"
    }
  }
}
